<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="@dimen/key_border" android:color="@color/transparent" />
            <solid android:color="@color/color_key_pressed" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape>
            <stroke android:width="@dimen/key_border" android:color="@color/transparent" />
            <solid android:color="@color/color_key_pressed" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <stroke android:width="@dimen/key_border" android:color="@color/transparent" />
            <solid android:color="@color/color_key_pressed" />
        </shape>
    </item>

    <item>
        <shape>
            <stroke android:width="@dimen/key_border" android:color="@color/transparent" />
            <solid android:color="@color/color_key_normal" />
        </shape>
    </item>
</selector>